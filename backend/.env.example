# Jarvis Backend - Cloudflare Workers Environment
# Copy to .env for local development with wrangler
# For production, set these as secrets via: wrangler secret put SECRET_NAME

# ============================================
# DATABASE
# ============================================
# D1 database binding is configured in wrangler.toml
# These are for local development only

DATABASE_URL=file:./local.db

# ============================================
# AUTHENTICATION
# ============================================

# JWT signing secret (min 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars

# Token expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800

# ============================================
# GOOGLE OAUTH (Server-side validation)
# ============================================

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ============================================
# OPENAI (Embeddings API)
# ============================================

OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================
# CORS
# ============================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://jarvis.yourcompany.com

# ============================================
# LOGGING
# ============================================

# Level: debug | info | warn | error
LOG_LEVEL=info

# ============================================
# ENVIRONMENT
# ============================================

# development | staging | production
ENVIRONMENT=development
