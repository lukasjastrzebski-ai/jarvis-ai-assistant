import Foundation

// Jarvis Secrets Configuration
// Copy this file to Secrets.swift and fill in your values
// Add Secrets.swift to .gitignore
//
// Alternative: Use a build script to generate this from environment variables

/// App secrets and API keys
public enum Secrets {
    // MARK: - API Endpoints

    /// Base URL for the Jarvis backend API
    #if DEBUG
    public static let apiBaseURL = "http://localhost:8787"
    #else
    public static let apiBaseURL = "https://jarvis-api.yourcompany.workers.dev"
    #endif

    // MARK: - Google OAuth

    /// Google OAuth Client ID (iOS type)
    public static let googleClientID = "YOUR_CLIENT_ID.apps.googleusercontent.com"

    /// Reversed client ID for URL scheme
    public static let googleReversedClientID = "com.googleusercontent.apps.YOUR_CLIENT_ID"

    // MARK: - OpenAI (if doing on-device calls)

    /// OpenAI API key for embeddings
    /// Note: Prefer server-side calls for security
    public static let openAIAPIKey = "sk-your-api-key"

    // MARK: - Feature Flags

    public static let isVoiceEnabled = true
    public static let isGmailSyncEnabled = true
    public static let isCalendarSyncEnabled = true
    public static let isAIDraftingEnabled = true
}

/// Environment configuration
public enum AppEnvironment: String {
    case development
    case staging
    case production

    public static var current: AppEnvironment {
        #if DEBUG
        return .development
        #else
        // Could also check a build flag or config file
        return .production
        #endif
    }

    public var apiBaseURL: String {
        switch self {
        case .development:
            return "http://localhost:8787"
        case .staging:
            return "https://jarvis-api-staging.yourcompany.workers.dev"
        case .production:
            return "https://jarvis-api.yourcompany.workers.dev"
        }
    }
}
