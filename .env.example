# Jarvis AI Assistant - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# GOOGLE CLOUD (Gmail & Calendar APIs)
# ============================================
# Create at: https://console.cloud.google.com/
# Enable: Gmail API, Google Calendar API
# Create OAuth 2.0 credentials (iOS app type)

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=com.yourcompany.jarvis:/oauth2callback

# ============================================
# OPENAI (Embeddings for Memory System)
# ============================================
# Get API key at: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# CLOUDFLARE (Backend Deployment)
# ============================================
# Get from: https://dash.cloudflare.com/profile/api-tokens

CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# D1 Database (created via wrangler d1 create)
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id
CLOUDFLARE_D1_DATABASE_NAME=jarvis-db

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure random string (min 32 chars)
# Example: openssl rand -base64 32

JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_ISSUER=jarvis-api
JWT_AUDIENCE=jarvis-app

# ============================================
# APPLE SERVICES (Optional - for push notifications)
# ============================================
# Get from: https://developer.apple.com/account/

APPLE_TEAM_ID=your-team-id
APPLE_KEY_ID=your-key-id
APPLE_PRIVATE_KEY_PATH=./AuthKey_XXXXXX.p8

# ============================================
# APP CONFIGURATION
# ============================================

APP_BUNDLE_ID=com.yourcompany.jarvis
APP_NAME=Jarvis
APP_VERSION=1.0.0

# Environment: development | staging | production
APP_ENVIRONMENT=development

# ============================================
# FEATURE FLAGS
# ============================================

FEATURE_VOICE_ENABLED=true
FEATURE_GMAIL_SYNC=true
FEATURE_CALENDAR_SYNC=true
FEATURE_AI_DRAFTING=true
